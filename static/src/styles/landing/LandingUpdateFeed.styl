.LandingUpdateFeed {
    padding: grid(3);
}

.LandingUpdateFeed__postContainer {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: stretch;
}

.LandingUpdateFeed__item {
  margin-bottom: grid(2);
  flex-basis: 24%;
}

@media screen and (max-width: 1200px) {
  .LandingUpdateFeed__item {
    flex-basis: 32%;
  }
}

@media screen and (max-width: 900px) {
  .LandingUpdateFeed__item {
    flex-basis: 49%;
  }
}

@media screen and (max-width: 660px) {
  .LandingUpdateFeed__item {
    flex-basis: 100%;
  }
}
