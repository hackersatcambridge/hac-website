.PostCard {
  background: $Color__bright2;
  background-size: cover;
  border-radius: $Layout__normalBorderRadius;
  min-height: grid(50);
  color: $Color__lightText;
  position: relative;
  overflow: hidden;
  z-index: 0;
  cursor: pointer;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
}

.PostCard__photoBackground {
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.3;
  background-repeat: no-repeat;
  background-position: 50% 0;
  -ms-background-size: cover;
  -o-background-size: cover;
  -moz-background-size: cover;
  -webkit-background-size: cover;
  background-size: cover;
  z-index: 1;
  transition: opacity 0.2s;
}

.PostCard:hover > .PostCard__photoBackground {
  opacity: 0.2;
}

.PostCard__content {
  position: absolute;
  padding: grid(4);
  top:0;
  left:0;
  bottom:0;
  right:0;
  z-index: 2;
  height: 100%;
}

.PostCard__categoryLabel {
  display: inline-block;
  Text__headerScale(-1);
  text-transform: uppercase;
  font-family: $Text__primaryFont;
  letter-spacing: 0.15em;
  margin-bottom: grid(3);
  color: alpha($Color__light, 0.7);
}

.PostCard__title {
  font-family: $Text__emphasisFont;
  text-transform: uppercase;
  Text__headerScale(1);
  font-weight: 900;
  margin-bottom: grid(2);
}

.PostCard__bottomAction {
  position: absolute;
  bottom: grid(4);
  right: grid(4)
}

.PostCard__bottomAction:after {
  content: ' ‚ûù';
}